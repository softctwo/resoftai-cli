[MASTER]
# Use multiple processes to speed up Pylint
jobs=4

# Pickle collected data for later comparisons
persistent=yes

# Add files or directories to the blacklist
ignore=CVS,.git,__pycache__,venv,build,dist,*.egg-info

# Add files or directories matching the regex patterns to the blacklist
ignore-patterns=test_.*?\.py,conftest\.py

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0103,  # invalid-name
    C0111,  # missing-docstring
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access
    W0613,  # unused-argument
    W0621,  # redefined-outer-name (common in fixtures)
    E1101,  # no-member (false positives with SQLAlchemy)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# String used as indentation unit
indent-string='    '

# Expected format of line ending
expected-line-ending-format=LF

[BASIC]
# Good variable names
good-names=i,j,k,ex,_,id,db

# Regular expression for constants
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class
max-attributes=15

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=25

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of statements in function / method body
max-statements=60

# Minimum number of public methods for a class
min-public-methods=0

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=6

# Ignore comments when computing similarities
ignore-comments=yes

# Ignore docstrings when computing similarities
ignore-docstrings=yes

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of class names for which member attributes should not be checked
ignored-classes=SQLObject,optparse.Values,thread._local,_thread._local,Session

# List of members which are set dynamically
generated-members=REQUEST,acl_users,aq_parent

[IMPORTS]
# Deprecated modules which should not be used
deprecated-modules=optparse,imp

# Allow wildcard imports from modules
allow-wildcard-with-all=no

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=Exception
